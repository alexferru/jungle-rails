<header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>
<section class="admin-categories-index py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card ">
          <div class=" bg-light">
            
          </div>
          <div class="card-body">
           

            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col">Category</th>
                  </tr>
                </thead>
                <tbody>
                  <%= render @categories %>
                </tbody>
              </table>
            </div>
            <div class="d-flex justify-content-end mb-4">
              <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-success' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

