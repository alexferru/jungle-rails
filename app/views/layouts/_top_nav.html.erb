
<header class="<%= current_page?(root_path) ? "hero" : "hero small" %>">
  <section class="title">
    <h3>Welcome to</h3>
    <h1>The Jungle</h1>
    <h2>Where you can find any plants!</h2>
  </section>
</header>
<nav class="navbar navbar-expand-lg navbar-dark sticky-nav navbar-custom">
  <div class="container">
    <a class="navbar-brand" href="<%= root_path %>">Jungle</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <% Category.all.each do |category| %>
          <li class="nav-item">
            <%= link_to category.name, category, class: "nav-link nav-link-custom" %>
          </li>
        <% end %>
      </ul>
      <ul class="navbar-nav">
      <li class="nav-item dropdown admin-dropdown">
      <a
        class="nav-link dropdown-toggle nav-link-custom text-danger"
        href="#"
        id="navbarDropdownAdmin"
        role="button"
        data-bs-toggle="dropdown"
        aria-expanded="false"
      >
        Admin
      </a>
      <ul class="dropdown-menu dropdown-menu-dark">
      <li><%= link_to 'Dashboard', [:admin, :root], class: "nav-link" %></li>
      <li><%= link_to 'Products', [:admin, :products], class: "nav-link" %></li>
      <li><%= link_to 'Categories', [:admin, :categories], class: "nav-link" %></li>
      <li><%= link_to 'Sales', [:admin, :sales], class: "nav-link" %></li>
    </ul>
  </li>
        <li class="nav-item">
          <%= link_to cart_path, class: "nav-link nav-link-custom" do %> <%= fa_icon "shopping-cart" %>
          My Cart (<%= cart.size %>) <% end %>
        </li>
        <% if current_user %>
          <li class="nav-item">
            <span class="navbar-text nav-link-custom">Hello, <%= current_user.name %> <%= current_user.last_name %>!</span>
          </li>
          <li class="nav-item">
            <%= link_to "Logout", '/logout', class: 'nav-link nav-link-custom logout-link' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Login', '/login', class: 'nav-link nav-link-custom login-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign Up', '/signup', class: 'nav-link nav-link-custom signup-link' %>
          </li>
        <% end %>
    </ul>
  </div>
</div>
</nav>
<script>
(function(){
const gnr = () => {
    const uptitle = document.querySelector("section.title h3");
    const subtitle = document.querySelector("section.title h2");
    const header = document.querySelector("header.hero");

    uptitle.style.fontSize = "5em";
    uptitle.style.fontWeight = 900;
    uptitle.style.textAlign = "center";

    subtitle.innerHTML =
      "<p>Watch it bring you to your</p><p> shu-n-n-n-n-n-n-n-n knees, knees!</p>";
  };
  const title = document.querySelector("header.hero");
  title.addEventListener("dblclick", gnr);
  
})()
  </script>